version: "3.5"

services:

  #php server
  gewaercmsapi:
    image: mctekk/phalconphp:7.4
    volumes:
      - .:/app
      - ../canvas-core:/canvas-core
      - ../baka:/baka
    depends_on:
      - 'redis'
      - 'dblocal'
    tty: true
    ports:
      - "9000:9000"
    networks:
      - local-network
      - my-proxy-net

  nginx:
    image: nginx:latest
    ports:
        - "80:80"
    links:
        - gewaercmsapi
    volumes:
        - .:/app
        - ./storage/ci/nginx.conf:/etc/nginx/conf.d/default.conf
    networks:
      - local-network
      - public-network

  redis:
    image: 'redis:5.0.5-alpine'
    ports: 
      - "6379:6379"
    volumes:
      - 'redis:/data'
    networks:
      - local-network

  memcached:
    image: memcached
    ports:
      - "11211:11211"
    networks:
      - local-network

  dblocal:
    image: mariadb:10.4
    restart: always
    ports:
      - "3308:3306"
    env_file:
      - '.env'
    volumes:
      - "db-data:/var/lib/mysql"
    networks:
        - local-network

  beanstalkd:
    image: schickling/beanstalkd:latest
    restart: always
    ports:
      - "11300:11300"
    networks:
      - local-network

volumes:
  db-data:
  redis:
  esdata:
  rabbit:

networks:
  local-network:
  public-network:
  my-proxy-net:
    external:
      name: canvas_network